rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to manage their own avatar files
    match /avatars/{uid}/{allPaths=**} {
      allow read: if true; // Avatars are public; change to auth != null if needed
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Default: deny other writes, optional authenticated reads
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}


